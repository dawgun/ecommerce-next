{
  "name": "@repo/ui",
  "version": "0.0.0",
  "exports": {
    "./*": "./src/*.tsx",
    "./atom/title": "./src/atom/title/index.ts"
  },
  "license": "MIT",
  "scripts": {
    "build:styles": "tailwindcss -i ../tailwind-config/shared-styles.css -o ./dist/index.css",
    "build:components": "tsc",
    "check-types": "tsc --noEmit",
    "dev:styles": "tailwindcss -i ../tailwind-config/shared-styles.css -o ./dist/index.css --watch",
    "dev:components": "tsc --watch",
    "lint": "eslint src --max-warnings 0",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "peerDependencies": {
    "react": "^19"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/tailwind-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@tailwindcss/cli": "4.1.17",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "19.2.7",
    "@vitejs/plugin-react": "5.1.1",
    "clsx": "2.1.1",
    "eslint": "9.39.1",
    "jsdom": "^27.2.0",
    "tailwindcss": "4.1.17",
    "typescript": "5.9.3",
    "vitest": "4.0.15"
  }
}
